<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HOABL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--
                <item name="android:fontFamily">@font/blooming_elegant_regular</item>
        -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CustomTextInputLayout">
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="android:paddingTop">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/text_grey_color</item>
        <item name="hintTextColor">@color/text_grey_color</item>
        <item name="boxStrokeColor">@color/text_color</item>
    </style>

    <style name="CustomTextInputEditText">
        <item name="android:singleLine">true</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="maxLines">1</item>
        <item name="paddingStart">@dimen/_8sdp</item>
        <item name="paddingEnd">@dimen/_2sdp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingTop">@dimen/margin_size_12</item>
        <item name="android:paddingBottom">@dimen/margin_size_12</item>
    </style>

    <style name="customtabs">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="singleLine">true</item>
        <item name="android:minLines">1</item>
        <item name="maxLines">1</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="text_style_white_30">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_style_blue_20">
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/app_color</item>
    </style>

</resources>