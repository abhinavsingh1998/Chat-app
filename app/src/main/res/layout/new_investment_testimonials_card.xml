<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/text_blue_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_testimonials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_corner_radius_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_30"
            android:layout_marginHorizontal="@dimen/margin_size_13"
            android:fontFamily="@font/jost_regular"
            android:text="@string/testimonials"
            android:textColor="@color/text_light_black_color"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_video_drone_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_all"
            android:textColor="@color/text_blue_color"
            android:textSize="@dimen/text_size_11"
            app:layout_constraintBottom_toBottomOf="@id/tv_video_title"
            app:layout_constraintEnd_toStartOf="@+id/iv_video_drone_arrow"
            app:layout_constraintTop_toTopOf="@id/tv_video_title" />

        <ImageView
            android:id="@+id/iv_video_drone_arrow"
            android:layout_width="@dimen/margin_size_14"
            android:layout_height="@dimen/margin_size_7"
            android:layout_marginEnd="@dimen/margin_size_15"
            android:src="@drawable/ic_arrow_forward_black"
            app:layout_constraintBottom_toBottomOf="@id/tv_video_drone_see_all"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_video_drone_see_all" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_profile_image"
            android:layout_width="@dimen/margin_size_36"
            android:layout_height="@dimen/margin_size_36"
            app:cardCornerRadius="@dimen/margin_size_18"
            android:layout_marginTop="@dimen/margin_size_22"
            android:layout_marginStart="@dimen/margin_size_108"
            app:cardElevation="@dimen/_3sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_video_title">
            <ImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/new_investment_page_image"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_profile_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rajeev Kumar"
            android:fontFamily="@font/jost_regular"
            android:textSize="@dimen/text_size_12"
            android:layout_marginStart="@dimen/margin_size_8"
            android:layout_marginEnd="@dimen/margin_size_13"
            android:textColor="@color/text_profile_name_color"
            app:layout_constraintStart_toEndOf="@id/cv_profile_image"
            app:layout_constraintTop_toTopOf="@id/cv_profile_image"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_profile_designation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CEO, Futurecorp Inc."
            android:fontFamily="@font/jost_regular"
            android:textSize="@dimen/text_size_11"
            android:layout_marginEnd="@dimen/margin_size_13"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_profile_name"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_profile_info_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Neque porro quisquam estp qui dolorem ipsu porro quisquam estp qui ipsu."
            android:fontFamily="@font/jost_light"
            android:textSize="@dimen/text_size_12"
            android:layout_marginTop="@dimen/margin_size_12"
            android:layout_marginStart="@dimen/margin_size_27"
            android:layout_marginEnd="@dimen/margin_size_25"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_profile_image"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_testimonials_view_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_7"
            android:layout_marginTop="@dimen/margin_size_30"
            android:background="@drawable/left_corner_radius_bg"
            android:backgroundTint="@color/background_yellow_color"
            android:paddingHorizontal="@dimen/margin_size_18"
            android:paddingVertical="@dimen/margin_size_10"
            android:text="20 People saw this project in 7 days"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/margin_size_30"
            app:layout_constraintEnd_toStartOf="@id/tv_testimonials_apply_now"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_info_text"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_testimonials_apply_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_size_5"
            android:layout_marginEnd="@dimen/margin_size_7"
            android:background="@drawable/right_corner_radius_bg"
            android:backgroundTint="@color/black"
            android:paddingHorizontal="@dimen/margin_size_18"
            android:paddingVertical="@dimen/margin_size_10"
            android:text="Apply now"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tv_testimonials_view_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_testimonials_view_info"
            app:layout_constraintTop_toTopOf="@id/tv_testimonials_view_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
