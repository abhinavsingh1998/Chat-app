<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_size_6"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_transaction_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_size_16"
        android:layout_marginTop="@dimen/margin_size_14"
        android:fontFamily="@font/jost_bold"
        style="@style/text_style_text_color_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/isle_of_bliss" />

    <TextView
        android:id="@+id/tv_transaction_time_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_6"
        android:layout_marginTop="@dimen/margin_size_14"
        android:fontFamily="@font/jostregular"
        style="@style/text_style_grey_14"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/tv_transaction_name"
        app:layout_constraintTop_toTopOf="parent"
        android:text="11th March 2022" />

    <TextView
        android:id="@+id/receipt_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jostregular"
        android:textAlignment="textStart"
        android:layout_marginStart="@dimen/margin_size_90"
        android:layout_marginTop="@dimen/margin_size_10"
        style="@style/text_style_blue_14"
        android:text="@string/see_receipt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"

        app:layout_constraintTop_toTopOf="@+id/tv_transaction_time_date" />

    <View
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_size_100"
        android:layout_marginTop="@dimen/margin_size_0"
        android:layout_marginEnd="@dimen/margin_size_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toEndOf="@+id/tv_transaction_time_date"
        app:layout_constraintTop_toBottomOf="@+id/receipt_tv" />

    <ImageView
        android:id="@+id/img_rupee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rupee_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_transaction_name" />

    <TextView
        android:id="@+id/tv_payment_milestone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/jostregular"
        style="@style/text_style_text_color_14"
        app:layout_constraintStart_toEndOf="@+id/img_rupee"
        app:layout_constraintTop_toBottomOf="@+id/tv_transaction_name"
        android:text="Payment Milestone 2:" />

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/jostbold"
        android:textColor="#676ac0"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/tv_payment_milestone"
        app:layout_constraintTop_toBottomOf="@+id/tv_transaction_time_date"
        android:text="â‚¹20,000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_size_20"
        android:background="@color/category_bottom_ash_line_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_milestone"
        tools:layout_editor_absoluteX="55dp" />

</androidx.constraintlayout.widget.ConstraintLayout>