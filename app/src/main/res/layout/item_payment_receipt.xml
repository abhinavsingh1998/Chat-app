<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvProjectName"
        style="@style/text_style_text_color_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jost_medium"
        android:text="Total Amount Paid:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPaymentDate"
        style="@style/text_style_grey_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/jost_italic"
        android:text="11th March 2022"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSeeReceipt"
        style="@style/text_style_blue_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/jost_regular"
        android:text="@string/see_receipt"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPaymentDate" />

    <TextView
        android:id="@+id/tvPaymentMilestone"
        style="@style/text_style_text_color_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_regular"
        android:text="Payment Milestone 2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvProjectName"
        app:layout_constraintStart_toEndOf="@id/tvProjectName"
        app:layout_constraintTop_toTopOf="@+id/tvProjectName" />

    <TextView
        android:id="@+id/tvPaidAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/jost_semibold"
        android:text="â‚¹20,000"
        android:textColor="@color/app_color"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProjectName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/category_bottom_ash_line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSeeReceipt" />

</androidx.constraintlayout.widget.ConstraintLayout>