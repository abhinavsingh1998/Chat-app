<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_color">

            <View
                android:id="@+id/fullView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_size_55"
                android:layout_marginEnd="@dimen/margin_size_10"
                android:background="@drawable/shape2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_size_24"
                android:layout_marginTop="@dimen/margin_size_27"
                android:background="@drawable/ic_path"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fullView" />

            <TextView
                android:id="@+id/tv_Account"
                style="@style/text_style_blue_16"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_size_16"
                android:layout_marginTop="@dimen/margin_size_24"
                android:fontFamily="@font/jostmedium"
                android:text="@string/My_account"
                app:layout_constraintStart_toEndOf="@+id/imgArrow"
                app:layout_constraintTop_toTopOf="@+id/fullView" />


            <TextView
                android:id="@+id/tv_kyc"
                style="style/text_style_text_color_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_16"
                android:layout_marginTop="@dimen/margin_size_26"
                android:fontFamily="@font/jostregular"
                android:text="@string/kyc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgArrow" />

            <View
                android:id="@+id/View_aadhar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="@dimen/margin_size_16"
                android:layout_marginTop="@dimen/margin_size_14"
                android:layout_marginEnd="@dimen/margin_size_16"
                android:background="@drawable/shape2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kyc" />

            <TextView
                android:id="@+id/tv_aadhar"
                style="@style/text_style_text_color_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/jostregular"
                android:text="Aadhar Card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/View_aadhar" />

            <TextView
                android:id="@+id/documentview_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_163.5"
                android:layout_marginTop="@dimen/margin_size_9"
                android:layout_marginEnd="@dimen/margin_size_0"
                android:fontFamily="@font/jostregular"
                android:text="@string/view_document"
                style="@style/text_style_blue_12"
                app:layout_constraintEnd_toEndOf="@+id/View_aadhar"
                app:layout_constraintStart_toEndOf="@+id/tv_aadhar"
                app:layout_constraintTop_toTopOf="@+id/View_aadhar" />


            <View
                android:id="@+id/document_view_link_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="182dp"
                android:layout_marginEnd="@dimen/margin_size_30"
                android:background="@color/app_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_aadhar"
                app:layout_constraintTop_toBottomOf="@+id/documentview_link" />

            <View
                android:id="@+id/pan_view"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/margin_size_16"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/margin_size_16"
                android:background="@drawable/shape2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/View_aadhar" />

            <TextView
                android:id="@+id/tv_pan"
                style="@style/text_style_text_color_14"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/margin_size_16"
                android:layout_marginTop="@dimen/margin_size_8"
                android:fontFamily="@font/jostregular"
                android:text="@string/pan_card"
                app:layout_constraintStart_toStartOf="@+id/pan_view"
                app:layout_constraintTop_toBottomOf="@+id/View_aadhar" />

            <TextView
                android:id="@+id/tv_document_link2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_163.5"
                android:layout_marginTop="@dimen/margin_size_9"
                android:layout_marginEnd="@dimen/margin_size_0"
                android:fontFamily="@font/jostregular"
                android:text="@string/view_document"
                style="@style/text_style_blue_12"
                app:layout_constraintEnd_toEndOf="@+id/pan_view"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_pan"
                app:layout_constraintTop_toTopOf="@+id/pan_view" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="182dp"
                android:layout_marginEnd="@dimen/margin_size_32"
                android:background="@color/app_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.71"
                app:layout_constraintStart_toEndOf="@+id/tv_pan"
                app:layout_constraintTop_toBottomOf="@+id/tv_document_link2" />

            <TextView
                android:id="@+id/tv_Doc"
                style="style/text_style_text_color_18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_16"
                android:layout_marginTop="@dimen/margin_size_30"
                android:fontFamily="@font/jostregular"
                android:text="@string/documents"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pan_view" />


            <TextView
                android:id="@+id/see_tv"
                style="@style/text_style_blue_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_190"
                android:layout_marginTop="@dimen/margin_size_30"
                android:layout_marginEnd="@dimen/margin_size_11"
                android:fontFamily="@font/jostregular"
                android:text="@string/see_all"
                app:layout_constraintStart_toEndOf="@+id/tv_Doc"
                app:layout_constraintTop_toBottomOf="@+id/pan_view" />

            <ImageView
                android:id="@+id/arrow_right_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_8"
                android:layout_marginTop="@dimen/margin_size_30"
                android:layout_marginEnd="@dimen/margin_size_17"
                android:src="@drawable/ic_baseline_arrow_right_alt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/see_tv"
                app:layout_constraintTop_toBottomOf="@+id/pan_view" />


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/indicator"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/margin_size_28"
                android:layout_marginTop="@dimen/margin_size_32"
                android:layout_marginEnd="@dimen/margin_size_28"
                android:padding="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_Doc" />

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:background="#D3D4D5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_pager2" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_16"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="@dimen/margin_size_230"
                android:fontFamily="@font/jostregular"
                android:lineSpacingExtra="0sp"
                android:text="Payment History"
                android:textColor="#16161c"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/indicator" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/account_details_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


