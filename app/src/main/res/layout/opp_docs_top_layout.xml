<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/text_blue_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/text_blue_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_oppDoc_top_image"
            app:layout_constraintBottom_toBottomOf="@id/iv_oppDoc_top_image"/>

        <ImageView
            android:id="@+id/iv_oppDoc_top_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_85"
            android:scaleType="fitXY"
            android:src="@drawable/group_21_copy_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_oppDoc_project_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="43dp"
            android:layout_marginTop="@dimen/margin_size_19"
            android:fontFamily="@font/jost_bold"
            android:text="Isle of Bliss 2022"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_oppDoc_project_theme_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="43dp"
            android:fontFamily="@font/jost_medium"
            android:text="The investment destination of the decade"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_oppDoc_project_title" />

        <View
            android:id="@+id/view_top_line"
            android:layout_width="33dp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/margin_size_2"
            android:background="@color/viewpager_dot_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_oppDoc_project_theme_title" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_opp_doc_info_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/margin_size_10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_size_12"
            android:layout_marginTop="@dimen/margin_size_20"
            app:layout_constraintEnd_toStartOf="@id/cv_opp_doc_rating_card"
            app:layout_constraintTop_toBottomOf="@id/iv_oppDoc_top_image">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/project_detail_price_bg">

                <ImageView
                    android:id="@+id/iv_opp_doc_info_image"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sad_3"
                    android:scaleType="fitCenter"
                    android:layout_margin="@dimen/margin_size_8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_opp_doc_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/jost_regular"
                    android:textColor="@color/opp_doc_info_card_color"
                    android:layout_marginTop="@dimen/margin_size_9"
                    android:layout_marginBottom="@dimen/margin_size_15"
                    android:layout_marginEnd="@dimen/margin_size_22"
                    android:text="India’s first Branded Land Investment Opportunity."
                    app:layout_constraintStart_toStartOf="@id/iv_opp_doc_info_image"
                    app:layout_constraintTop_toBottomOf="@id/iv_opp_doc_info_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_opp_doc_rating_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/margin_size_10"
            app:layout_constraintStart_toEndOf="@+id/cv_opp_doc_info_card"
            android:layout_marginStart="@dimen/margin_size_12"
            android:layout_marginEnd="@dimen/margin_size_12"
            app:layout_constraintTop_toTopOf="@id/cv_opp_doc_info_card"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/project_detail_price_bg">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/iv_opp_doc_rating_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="182%"
                    android:fontFamily="@font/jost_bold"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/text_brown_dark_color"
                    android:layout_marginStart="@dimen/margin_size_8"
                    android:layout_marginTop="@dimen/margin_size_10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_opp_doc_rating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/jost_regular"
                    android:textColor="@color/opp_doc_info_card_color"
                    android:layout_marginTop="@dimen/margin_size_9"
                    android:layout_marginBottom="@dimen/margin_size_15"
                    android:layout_marginEnd="@dimen/margin_size_22"
                    android:text="Growth potential in branded land Investment."
                    app:layout_constraintStart_toStartOf="@id/iv_opp_doc_rating_image"
                    app:layout_constraintTop_toBottomOf="@id/iv_opp_doc_rating_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_opp_doc_infrastructure_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/margin_size_10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_size_12"
            android:layout_marginTop="@dimen/margin_size_10"
            app:layout_constraintEnd_toStartOf="@id/cv_opp_doc_hotspot_card"
            app:layout_constraintTop_toBottomOf="@id/cv_opp_doc_info_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/project_detail_price_bg">

                <ImageView
                    android:id="@+id/iv_opp_doc_infrastructure_image"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sad_3"
                    android:layout_margin="@dimen/margin_size_8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_opp_doc_infrastructure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/jost_regular"
                    android:textColor="@color/opp_doc_info_card_color"
                    android:layout_marginTop="@dimen/margin_size_9"
                    android:layout_marginBottom="@dimen/margin_size_15"
                    android:layout_marginEnd="@dimen/margin_size_22"
                    android:text="Major Infrastructure Projects to drive appreciation."
                    app:layout_constraintStart_toStartOf="@id/iv_opp_doc_infrastructure_image"
                    app:layout_constraintTop_toBottomOf="@id/iv_opp_doc_infrastructure_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_opp_doc_hotspot_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/margin_size_10"
            android:layout_marginStart="@dimen/margin_size_10"
            app:layout_constraintStart_toEndOf="@id/cv_opp_doc_infrastructure_card"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_size_12"
            app:layout_constraintTop_toTopOf="@id/cv_opp_doc_infrastructure_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/project_detail_price_bg">

                <ImageView
                    android:id="@+id/iv_opp_doc_hotspot_image"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sad_3"
                    android:layout_margin="@dimen/margin_size_8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_opp_doc_hotspot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/jost_regular"
                    android:textColor="@color/opp_doc_info_card_color"
                    android:layout_marginTop="@dimen/margin_size_9"
                    android:layout_marginBottom="@dimen/margin_size_15"
                    android:layout_marginEnd="@dimen/margin_size_22"
                    android:text="India’s first coastal hill-station and the next tourism hotspot."
                    app:layout_constraintStart_toStartOf="@id/iv_opp_doc_hotspot_image"
                    app:layout_constraintTop_toBottomOf="@id/iv_opp_doc_hotspot_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_opp_doc_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_30"
            android:layout_marginHorizontal="@dimen/margin_size_12"
            android:text="About Isle of Bliss"
            android:fontFamily="@font/jost_regular"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_light_black_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_opp_doc_infrastructure_card"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_opp_doc_about_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:fontFamily="@font/jost_light"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.2"
            android:text="The Isle of Bliss is phase 2 of Codename Bliss Dapoli, a seaside lifestyle plotting development from The House of Abhinandan Lodha."
            android:layout_marginTop="@dimen/margin_size_14"
            android:layout_marginEnd="@dimen/margin_size_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_opp_doc_about"
            app:layout_constraintTop_toBottomOf="@id/tv_opp_doc_about"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_opp_doc_about_description_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:fontFamily="@font/jost_light"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.2"
            android:text="The Isle of Bliss is phase 2 of Codename Bliss Dapoli, a seaside lifestyle plotting development from The House of Abhinandan Lodha."
            android:layout_marginTop="@dimen/margin_size_14"
            android:layout_marginEnd="@dimen/margin_size_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_opp_doc_about"
            app:layout_constraintTop_toBottomOf="@id/tv_opp_doc_about_description"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>