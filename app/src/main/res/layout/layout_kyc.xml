<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_size_14"
    android:background="@color/app_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.emproto.core.textviews.CustomTextView
            style="@style/text_style_white_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_back_hand"
            android:drawablePadding="@dimen/margin_size_6"
            android:singleLine="true"
            android:text="@string/following_attention"
            app:fontName="@string/jost_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.emproto.core.textviews.CustomTextView
            style="@style/text_style_white_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_blue_right_arrow"
            android:drawablePadding="@dimen/margin_size_6"
            android:singleLine="true"
            android:text="@string/see_all"
            app:fontName="@string/jost_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/kyc_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/kyc_card_color"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:cardElevation="@dimen/margin_size_4"
        app:cardCornerRadius="@dimen/margin_size_6"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_size_12">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_size_10"
                android:layout_marginLeft="@dimen/margin_size_12"
                android:layout_marginRight="@dimen/margin_size_17"
                android:layout_marginBottom="@dimen/margin_size_12"
                app:cardCornerRadius="@dimen/margin_size_6">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/person_image"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/margin_size_18"
                    android:layout_marginRight="@dimen/margin_size_18"
                    android:layout_marginTop="@dimen/margin_size_7"
                    android:layout_marginBottom="@dimen/margin_size_7"/>
            </androidx.cardview.widget.CardView>

            <com.emproto.core.textviews.CustomTextView
                android:id="@+id/tv_complete"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/complete_kyc"
                style="@style/text_style_white_11"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_alert"
                android:drawablePadding="@dimen/margin_size_6"
                android:gravity="start|center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_card"
                android:layout_marginTop="@dimen/margin_size_10"
                android:layout_marginLeft="@dimen/margin_size_17"
                android:layout_marginBottom="@dimen/margin_size_12"/>

            <com.emproto.core.textviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/please_complete"
                style="@style/text_style_white_11"
                android:drawableRight="@drawable/ic_baseline_arrow_right"
                android:drawablePadding="@dimen/margin_size_6"
                android:gravity="start|center"
                app:layout_constraintTop_toBottomOf="@id/tv_complete"
                app:layout_constraintStart_toEndOf="@id/image_card"
                android:layout_marginTop="@dimen/margin_size_10"
                android:layout_marginLeft="@dimen/margin_size_17"
                android:layout_marginRight="@dimen/margin_size_17"
                android:layout_marginBottom="@dimen/margin_size_12"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_18"
        android:layout_marginBottom="@dimen/margin_size_16"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_size_16"
        app:layout_constraintTop_toBottomOf="@id/kyc_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>