<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_4"
        app:cardCornerRadius="@dimen/margin_size_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_attention_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flight"
                android:layout_marginStart="@dimen/margin_size_16"
                android:layout_marginTop="@dimen/margin_size_17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_attention_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment is pending!"
                android:layout_marginStart="@dimen/margin_size_7"
                android:fontFamily="@font/jost_medium"
                style="@style/text_style_text_color_18"
                app:layout_constraintStart_toEndOf="@id/iv_attention_item_image"
                app:layout_constraintTop_toTopOf="@id/iv_attention_item_image"
                app:layout_constraintBottom_toBottomOf="@id/iv_attention_item_image"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_request_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Please complete your profile for hassle free experience."
                android:layout_marginStart="@dimen/margin_size_7"
                android:fontFamily="@font/jost_light"
                style="@style/text_style_text_color_16"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/margin_size_9"
                android:layout_marginEnd="@dimen/margin_size_40"
                app:layout_constraintStart_toStartOf="@id/iv_attention_item_image"
                app:layout_constraintTop_toBottomOf="@id/iv_attention_item_image"
                app:layout_constraintEnd_toStartOf="@id/iv_item_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/margin_size_33"
                />

            <ImageView
                android:id="@+id/iv_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_size_25"
                android:src="@drawable/ic_black_long_rightarrow"
                app:layout_constraintTop_toTopOf="@id/tv_attention_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_request_text"
                app:layout_constraintStart_toEndOf="@id/tv_request_text"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>