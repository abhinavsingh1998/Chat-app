<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_size_4">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_promises_card"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/margin_size_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_promises_bg">

            <ImageView
                android:id="@+id/iv_promises_item_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="@dimen/margin_size_13"
                android:layout_marginTop="@dimen/margin_size_16"
                android:src="@drawable/lock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_promises_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/jost_bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/text_violet_dark_color"
                android:layout_marginTop="@dimen/margin_size_20"
                android:layout_marginEnd="@dimen/margin_size_9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_promises_item_image"
                app:layout_constraintTop_toBottomOf="@id/iv_promises_item_image"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_promises_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100% safe and secure physical possession kjschbshcbjabcjsabjbcjsabchbsbjsbbdsjhdsjhdsjhdsjhdjshdjshdjshdjshdjsdhsdisodisodisodiosidosidsoidsoidso"
                android:textSize="@dimen/text_size_12"
                android:fontFamily="@font/jost_regular"
                android:textColor="@color/text_color"
                android:layout_marginTop="@dimen/margin_size_6"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingBottom="@dimen/margin_size_12"
                android:layout_marginEnd="@dimen/margin_size_13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_promises_name"
                app:layout_constraintTop_toBottomOf="@id/tv_promises_name"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>