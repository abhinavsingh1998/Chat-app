<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#676ac0"
        android:layout_height="match_parent">

        <View
            android:id="@+id/View_Complete"
            android:layout_width="wrap_content"
            android:layout_height="750dp"
            android:layout_marginTop="@dimen/margin_size_55"
            android:background="@drawable/shape1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/leftarrowimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_14"
            android:layout_marginTop="@dimen/margin_size_27"
            android:background="@drawable/ic_path"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/View_Complete" />

        <TextView

            android:id="@+id/textview_Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_24"
            android:layout_marginTop="@dimen/margin_size_24"
            android:fontFamily="@font/jostmedium"
            android:text="@string/security"
            style ="text_style_blue_16"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/leftarrowimage"
            app:layout_constraintTop_toTopOf="@+id/View_Complete" />

        <View
            android:id="@+id/button_View"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_size_40"
            android:layout_marginTop="@dimen/margin_size_30"
            android:layout_marginEnd="@dimen/margin_size_40"
            android:background="@drawable/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_Settings" />

        <ImageView
            android:id="@+id/iv_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_8"
            android:layout_marginTop="@dimen/margin_size_10"
            android:background="@drawable/ic_siren"
            app:layout_constraintStart_toStartOf="@+id/button_View"
            app:layout_constraintTop_toTopOf="@+id/button_View" />


        <TextView
            android:id="@+id/tv_emergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_10"
            android:fontFamily="@font/jostmedium"
            android:text="@string/report_a_security_emergency"
            android:gravity="center_horizontal|center"
            android:textColor="#ffffff"
            style ="text_style_white_11"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/iv_alarm"
            app:layout_constraintTop_toTopOf="@+id/button_View" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_7"
            android:src="@drawable/arrow_right_"
            android:layout_marginEnd="@dimen/margin_size_30"
            app:layout_constraintEnd_toEndOf="@+id/button_View"
            app:layout_constraintTop_toTopOf="@+id/button_View" />

        <View

            android:id="@+id/view_line"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/margin_size_30"
            android:background="#E3E1E1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_View" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_4"
            android:layout_marginTop="@dimen/margin_size_45"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toEndOf="@+id/View_Complete"
            app:layout_constraintTop_toBottomOf="@+id/button_View">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

