<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/homescreen_curve">


            <com.emproto.core.textviews.CustomTextView
                android:id="@+id/testimonals_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Testimonials"
                android:layout_marginTop="@dimen/margin_size_16"
                android:textColor="@color/app_color"
                android:fontFamily="@font/shelldon"
                android:textSize="@dimen/text_size_32"/>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_size_10"
                app:layout_constraintTop_toBottomOf="@id/testimonals_header"/>


</androidx.constraintlayout.widget.ConstraintLayout>