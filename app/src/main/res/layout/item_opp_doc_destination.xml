<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_size_6"
        app:cardElevation="@dimen/margin_size_3"
        android:layout_margin="@dimen/margin_size_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_dest_image"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/margin_size_6"
                android:layout_marginBottom="@dimen/margin_size_5"
                app:cardCornerRadius="@dimen/margin_size_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_dest_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/new_investment_page_image" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_item_dest_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Navi Mumbai Airport"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/black"
                android:fontFamily="@font/jost_medium"
                android:layout_marginHorizontal="@dimen/margin_size_8"
                app:layout_constraintStart_toEndOf="@id/cv_dest_image"
                app:layout_constraintTop_toTopOf="@id/cv_dest_image"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_item_dest_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Navi-Mumbai International Airport completion, just a 3/4-hour drive to Dapoli."
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/text_violet_dark_color"
                android:fontFamily="@font/jost_regular"
                android:layout_marginTop="@dimen/margin_size_2"
                android:layout_marginEnd="@dimen/margin_size_8"
                app:layout_constraintStart_toStartOf="@id/tv_item_dest_name"
                app:layout_constraintTop_toBottomOf="@id/tv_item_dest_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>