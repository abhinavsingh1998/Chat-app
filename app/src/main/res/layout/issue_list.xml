<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp">

    <ImageView
        android:id="@+id/radio_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_28"
        android:layout_marginTop="@dimen/margin_size_2"
        android:layout_marginBottom="@dimen/margin_size_2"
        android:padding="@dimen/_2sdp"
        android:paddingTop="@dimen/_2sdp"
        android:src="@drawable/ic_unchecked_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.emproto.core.textviews.CustomTextView
        android:id="@+id/issue_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_8"
        android:layout_marginTop="@dimen/margin_size_2"
        android:layout_marginRight="@dimen/margin_size_150"
        android:layout_marginBottom="@dimen/margin_size_2"
        android:fontFamily="@font/jost_medium"
        android:padding="@dimen/_2sdp"
        android:paddingTop="@dimen/_2sdp"
        android:text="@string/unable_to_enter_num"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/radio_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>