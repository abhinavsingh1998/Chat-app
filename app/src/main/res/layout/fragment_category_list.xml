<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_filter_price_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_16"
        android:layout_marginHorizontal="@dimen/margin_size_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cv_filter_area_card" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_filter_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/unselected_button_color">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_filter_price"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="@dimen/text_size_14"
                android:visibility="visible"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textAlignment="center"
                android:fontFamily="@font/jost_regular"
                android:textColor="@color/filter_text_color"
                android:layout_marginStart="21dp"
                android:layout_marginVertical="@dimen/margin_size_7"
                android:layout_marginEnd="@dimen/margin_size_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_filter_drop_down"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <Spinner
                android:id="@+id/price_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:visibility="invisible"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_filter_drop_down"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/iv_filter_drop_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/path_2"
                android:layout_marginEnd="@dimen/margin_size_14"
                app:layout_constraintStart_toEndOf="@id/tv_filter_price"
                app:layout_constraintTop_toTopOf="@id/tv_filter_price"
                app:layout_constraintBottom_toBottomOf="@id/tv_filter_price"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_filter_area_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_12"
        app:layout_constraintStart_toEndOf="@+id/cv_filter_price_card"
        app:layout_constraintTop_toTopOf="@id/cv_filter_price_card"
        app:layout_constraintBottom_toBottomOf="@id/cv_filter_price_card"
        app:layout_constraintEnd_toStartOf="@id/cv_filter_validity_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_filter_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/unselected_button_color">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_filter_area"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Area"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_14"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/jost_regular"
                android:textColor="@color/filter_text_color"
                android:layout_marginStart="21dp"
                android:layout_marginVertical="@dimen/margin_size_7"
                android:layout_marginEnd="@dimen/margin_size_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_filter_area_drop_down"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <Spinner
                android:id="@+id/area_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:visibility="invisible"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_filter_area_drop_down"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/iv_filter_area_drop_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/path_2"
                android:layout_marginEnd="@dimen/margin_size_14"
                app:layout_constraintStart_toEndOf="@id/tv_filter_area"
                app:layout_constraintTop_toTopOf="@id/tv_filter_area"
                app:layout_constraintBottom_toBottomOf="@id/tv_filter_area"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_filter_validity_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_12"
        app:layout_constraintTop_toTopOf="@id/cv_filter_area_card"
        app:layout_constraintStart_toEndOf="@id/cv_filter_area_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cv_filter_area_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_filter_validity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/unselected_button_color">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_filter_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer Validity"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/jost_regular"
                android:textColor="@color/filter_text_color"
                android:layout_marginStart="21dp"
                android:layout_marginVertical="@dimen/margin_size_7"
                android:layout_marginEnd="@dimen/margin_size_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_filter_validity_drop_down"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <Spinner
                android:id="@+id/validity_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:visibility="invisible"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_filter_validity_drop_down"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/iv_filter_validity_drop_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/path_2"
                android:layout_marginEnd="@dimen/margin_size_14"
                app:layout_constraintStart_toEndOf="@id/tv_filter_validity"
                app:layout_constraintTop_toTopOf="@id/tv_filter_validity"
                app:layout_constraintBottom_toBottomOf="@id/tv_filter_validity"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_category_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_size_20"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_category_list"
        tools:itemCount="5"
        android:layout_marginBottom="@dimen/margin_size_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_filter_price_card"/>
</androidx.constraintlayout.widget.ConstraintLayout>