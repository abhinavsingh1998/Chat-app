<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_faq_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_13"
        android:layout_marginTop="@dimen/margin_size_28"
        android:fontFamily="@font/jost_medium"
        android:text="@string/faq_text"
        android:textColor="@color/text_light_black_color"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toStartOf="@id/tv_read_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_read_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read All"
        android:textAllCaps="true"
        android:layout_marginEnd="@dimen/margin_size_8"
        android:textColor="@color/text_blue_color"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_faq_title"
        app:layout_constraintEnd_toStartOf="@+id/iv_faq_arrow"
        app:layout_constraintTop_toTopOf="@id/tv_faq_title" />

    <ImageView
        android:id="@+id/iv_faq_arrow"
        android:layout_width="@dimen/margin_size_14"
        android:layout_height="@dimen/margin_size_7"
        android:layout_marginEnd="@dimen/margin_size_15"
        android:src="@drawable/ic_arrow_forward_black"
        app:layout_constraintBottom_toBottomOf="@id/tv_faq_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_faq_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_12"
        android:layout_marginEnd="@dimen/margin_size_15"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_faq"
        tools:itemCount="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_faq_title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bn_ask_here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@drawable/white_button_bg"
        android:textAllCaps="false"
        android:fontFamily="@font/jost_medium"
        android:textSize="@dimen/text_size_12"
        android:layout_marginTop="@dimen/margin_size_20"
        android:text="Have any questions? Ask Here"
        android:paddingVertical="@dimen/margin_size_10"
        android:layout_marginHorizontal="@dimen/margin_size_52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_faq"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>