<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_size_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_left_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/opp_doc_ash_line"
        app:layout_constraintBottom_toBottomOf="@id/tv_about_project_title"
        app:layout_constraintEnd_toStartOf="@id/tv_about_project_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_about_project_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_about_project_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_30"
        android:fontFamily="@font/jost_regular"
        android:text="@string/about_the_project"
        android:textAlignment="center"
        style="@style/text_style_blue_20"
        app:layout_constraintEnd_toStartOf="@id/view_right_line"
        app:layout_constraintStart_toEndOf="@id/view_left_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_right_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/opp_doc_ash_line"
        app:layout_constraintBottom_toBottomOf="@id/tv_about_project_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_about_project_title"
        app:layout_constraintTop_toTopOf="@id/tv_about_project_title" />

    <ImageView
        android:id="@+id/iv_abt_project_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bitmap_4"
        android:layout_marginHorizontal="@dimen/margin_size_18"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/margin_size_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_about_project_title"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_abt_project_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_abt_project_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_size_6"
        android:layout_marginHorizontal="@dimen/margin_size_18"
        android:text="Neque porro quisquam estp qui dolorem ipsu porro quisquam estp qui ipsu.Neque porro quisquam estp qui dolorem.Neque porro quisquam estp qui dolorem ipsu porro quisquam estp qui ipsu.Neque porro quisquam estp qui dolorem."
        android:lineSpacingMultiplier="1.3"
        android:fontFamily="@font/jost_light"
        style="@style/text_style_reg_black_color_14"/>

</androidx.constraintlayout.widget.ConstraintLayout>