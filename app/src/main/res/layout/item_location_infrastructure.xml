<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_location_infrastructure_card"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_size_7"
    android:layout_marginStart="@dimen/margin_size_6"
    android:layout_marginEnd="@dimen/margin_size_5"
    android:outlineSpotShadowColor="#ababab"
    app:cardCornerRadius="@dimen/margin_size_6"
    app:cardElevation="4dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_location_image"
            android:layout_width="@dimen/margin_size_30"
            android:layout_height="@dimen/margin_size_30"
            android:layout_marginHorizontal="@dimen/margin_size_12"
            android:src="@drawable/hospital_symbol"
            app:layout_constraintBottom_toBottomOf="@id/tv_location_duration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_location_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_location_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_size_8"
            android:layout_marginTop="@dimen/margin_size_17"
            android:fontFamily="@font/jost_bold"
            android:text="Hospital"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintBottom_toTopOf="@id/tv_location_duration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_location_image"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_location_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_size_8"
            android:layout_marginTop="@dimen/margin_size_6"
            android:layout_marginEnd="@dimen/margin_size_8"
            android:layout_marginBottom="@dimen/margin_size_16"
            android:fontFamily="@font/jost_regular"
            android:text="10 hr 50 Min"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_location_name"
            app:layout_constraintTop_toBottomOf="@id/tv_location_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_location_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_size_8"
            android:layout_marginEnd="@dimen/margin_size_8"
            android:layout_marginBottom="@dimen/margin_size_16"
            android:fontFamily="@font/jost_regular"
            android:text="2.5 Km"
            android:textAlignment="textEnd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_location_duration"
            app:layout_constraintTop_toTopOf="@id/tv_location_duration" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>