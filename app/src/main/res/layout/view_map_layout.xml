<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_project_detail_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_166"
        android:layout_marginHorizontal="@dimen/margin_size_13"
        android:layout_marginTop="@dimen/margin_size_28"
        app:cardCornerRadius="@dimen/margin_size_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/project_detail_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/red" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_view_on_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_25"
        android:background="@drawable/all_corner_radius_white_bg"
        android:backgroundTint="@color/black"
        android:paddingHorizontal="@dimen/margin_size_18"
        android:paddingVertical="@dimen/margin_size_9"
        android:text="@string/view_on_map"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="@id/card_project_detail_map"
        app:layout_constraintEnd_toEndOf="@id/card_project_detail_map"
        app:layout_constraintStart_toStartOf="@id/card_project_detail_map" />

</androidx.constraintlayout.widget.ConstraintLayout>