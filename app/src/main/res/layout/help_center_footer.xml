<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_wants_to_connect"
        style="@style/text_style_text_color_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:fontFamily="@font/jostregular"
        android:text="@string/wants_to_connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.emproto.core.textviews.CustomTextView
        android:id="@+id/action_chat"
        style="@style/text_style_white_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_50"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/margin_size_50"
        android:background="@drawable/portfolio_btn_shape"
        android:drawableLeft="@drawable/ic_chat_4"
        android:drawableRight="@drawable/ic_combined_shape_copy_5"
        android:drawablePadding="@dimen/margin_size_8"
        android:paddingStart="@dimen/margin_size_30"
        android:paddingTop="@dimen/margin_size_12"
        android:paddingEnd="@dimen/margin_size_30"
        android:paddingBottom="@dimen/margin_size_12"
        android:text="@string/chat_with_us"
        app:fontName="@string/jost_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_wants_to_connect" />

    <TextView
        android:id="@+id/info"
        style="@style/text_style_lightgrey_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_112"
        android:layout_marginTop="@dimen/margin_size_8"
        android:layout_marginEnd="@dimen/margin_size_112"
        android:layout_marginBottom="@dimen/margin_size_17"
        android:fontFamily="@font/jostmedium"
        android:gravity="center"
        android:text="Or \nCall us:  +91 123 123 1231 "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_chat" />

    <TextView
        android:id="@+id/email"
        style="@style/text_style_lightgrey_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_112"
        android:layout_marginTop="@dimen/margin_size_6"
        android:layout_marginEnd="@dimen/margin_size_112"
        android:layout_marginBottom="@dimen/margin_size_17"
        android:fontFamily="@font/jostmedium"
        android:gravity="center"
        android:text="Email us: help@hoabl.in "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />
</androidx.constraintlayout.widget.ConstraintLayout>

