<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_left_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/opp_doc_ash_line"
        app:layout_constraintBottom_toBottomOf="@id/tv_opp_doc_destination_title"
        app:layout_constraintEnd_toStartOf="@id/tv_opp_doc_destination_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_opp_doc_destination_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_opp_doc_destination_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_14"
        android:fontFamily="@font/shelldon"
        android:text="Dapoli"
        android:textAlignment="center"
        android:textColor="@color/text_blue_color"
        android:textSize="@dimen/text_size_39"
        app:layout_constraintEnd_toStartOf="@id/view_right_line"
        app:layout_constraintStart_toEndOf="@id/view_left_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_right_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/opp_doc_ash_line"
        app:layout_constraintBottom_toBottomOf="@id/tv_opp_doc_destination_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_opp_doc_destination_title"
        app:layout_constraintTop_toTopOf="@id/tv_opp_doc_destination_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_destination_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_13"
        android:fontFamily="@font/jost_light"
        android:text="the Investment destination of the Decade"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_opp_doc_destination_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_16"
        android:layout_marginTop="@dimen/margin_size_17"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_destination_theme"
        tools:itemCount="5"
        tools:listitem="@layout/item_opp_doc_destination" />


</androidx.constraintlayout.widget.ConstraintLayout>