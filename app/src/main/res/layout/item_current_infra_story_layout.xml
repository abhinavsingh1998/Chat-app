<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_outer_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_6"
        android:layout_marginVertical="@dimen/margin_size_4"
        android:outlineSpotShadowColor="#ababab"
        app:cardCornerRadius="@dimen/margin_size_6"
        app:cardElevation="@dimen/margin_size_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_story_image"
                android:layout_width="@dimen/margin_size_200"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_size_4"
                android:layout_marginTop="@dimen/margin_size_4"
                app:cardCornerRadius="@dimen/margin_size_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_story_image"
                        android:layout_width="@dimen/margin_size_200"
                        android:layout_height="@dimen/margin_size_190"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/img" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_image_name"
                        style="@style/text_style_white_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.75"
                        android:background="@drawable/bottom_corner_radius_bg"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/jost_regular"
                        android:paddingHorizontal="@dimen/margin_size_12"
                        android:paddingVertical="@dimen/margin_size_6"
                        android:text="Navi Mumbai Airport"
                        android:textAlignment="textStart"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/iv_story_image"
                        app:layout_constraintStart_toStartOf="@id/iv_story_image" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_image_info"
                style="@style/text_style_black_color_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_size_8"
                android:layout_marginTop="@dimen/margin_size_8"
                android:layout_marginBottom="@dimen/margin_size_10"
                android:ellipsize="end"
                android:fontFamily="@font/jost_light"
                android:lines="3"
                android:maxLines="3"
                android:text="Neque porro quisquam estp qui dolorem ipsu porro quisquam estp qui ipsu.Neque porro quisquam estp qui dolorem."
                android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_story_image" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>