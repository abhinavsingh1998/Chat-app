<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.home.views.MythBusterActivity">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/text_grey_color"
                app:cardCornerRadius="6dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/text_grey_color"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card1"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/text_grey_color"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card2" />
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginEnd="6dp"
                android:background="@color/text_grey_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card3"
                app:layout_constraintTop_toTopOf="@id/card3"
                app:layout_constraintBottom_toBottomOf="@id/card3"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="6dp"
                android:background="@color/text_grey_color"
                app:layout_constraintStart_toEndOf="@+id/card3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/card3"
                app:layout_constraintBottom_toBottomOf="@+id/card3"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7"
                app:layout_constraintTop_toBottomOf="@id/card3" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/text_grey_color"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card3" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/text_grey_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/card3" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/text_grey_color"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toStartOf="@id/card4"
                app:layout_constraintTop_toBottomOf="@id/card4"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card7"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/text_grey_color"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toStartOf="@id/card4"
                app:layout_constraintTop_toBottomOf="@id/card6"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card8"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/text_grey_color"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toStartOf="@id/card5"
                app:layout_constraintTop_toBottomOf="@id/card5"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card9"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/text_grey_color"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toStartOf="@id/card5"
                app:layout_constraintTop_toBottomOf="@id/card8"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/jost_regular"
                android:gravity="center"
                android:text="@string/land_value"
                android:textColor="@color/text_grey_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card9" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>