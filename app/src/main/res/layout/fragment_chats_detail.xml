<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/img_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toEndOf="@+id/ivBack"
        app:layout_constraintTop_toTopOf="@id/ivBack">

        <ImageView
            android:id="@+id/ivThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:lineSpacingExtra="3sp"
        android:padding="2dp"
        android:text="HoABL Customer Chat Support"
        android:textColor="#17171c"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/cvImage"
        app:layout_constraintTop_toTopOf="@id/cvImage" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSearch"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/search_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivBack"
        app:layout_constraintTop_toBottomOf="@id/ivBack">
        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/img_search"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </ImageView>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:letterSpacing="-0.02"
            android:hint="Search"
            android:layout_marginLeft="6dp"
            android:textColor="#85869f"
            android:textSize="14sp"
            android:textStyle="normal"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivSearch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        app:layout_constraintTop_toBottomOf="@id/clSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#17171c"
        android:text="Today"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"/>

    <TextView
        android:id="@+id/tvChatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#17171c"
        android:letterSpacing="-0.02"
        android:gravity="end"
        android:text="9:11 PM"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDay"
        app:layout_constraintStart_toStartOf="@id/clSearch"/>

    <TextView
        android:id="@+id/tvHiMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_blue_card"
        android:layout_marginTop="12dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:paddingLeft="8dp"
        android:letterSpacing="-0.02"
        android:paddingRight="14dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#494a67"
        android:gravity="center_vertical"
        android:text="Hi Anuj Singh! Thanks for connecting. \nI am Chat Bot. I will be helping you \nwith your queries today."
        app:layout_constraintStart_toStartOf="@id/tvChatTime"
        app:layout_constraintTop_toBottomOf="@id/tvChatTime"/>
    <TextView
        android:id="@+id/tvChooseMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_blue_card"
        android:layout_marginTop="8dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:paddingLeft="8dp"
        android:letterSpacing="-0.02"
        android:paddingRight="2dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#494a67"
        android:gravity="center_vertical"
        android:text="Please choose the relevant option which\ndescribes your issue:"
        app:layout_constraintStart_toStartOf="@id/tvChatTime"
        app:layout_constraintTop_toBottomOf="@id/tvHiMsg"/>

    <TextView
        android:id="@+id/tvAboutHoabl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="About Hoabl"
        android:background="@drawable/card_bg"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvChooseMsg"
        android:layout_marginLeft="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvChooseMsg"/>
    <TextView
        android:id="@+id/tvPromises"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Promises"
        android:background="@drawable/card_bg"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvChooseMsg"
        android:layout_marginLeft="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="2dp"
        android:textSize="12sp"

        app:layout_constraintTop_toBottomOf="@id/tvAboutHoabl"/>
    <TextView
        android:id="@+id/tvInvestments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Investments"
        android:orientation="horizontal"
        android:background="@drawable/card_bg"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvChooseMsg"
        android:layout_marginLeft="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="2dp"
        android:textSize="12sp"

        app:layout_constraintTop_toBottomOf="@id/tvPromises"/>
    <TextView
        android:id="@+id/tvOthers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Others"
        android:textSize="12sp"
        android:background="@drawable/card_bg"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvChooseMsg"
        android:layout_marginLeft="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvInvestments"/>
</androidx.constraintlayout.widget.ConstraintLayout>