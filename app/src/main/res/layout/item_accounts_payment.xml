<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvProjectName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/jost_medium"
        android:text="Isle of Bliss"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPaidAmount" />

    <TextView
        android:id="@+id/tvLandId"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/jost_medium"
        android:text="Isle of Bliss"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/tvSeeReceipt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProjectName" />

    <TextView
        android:id="@+id/tvPaymentDate"
        style="@style/text_style_grey_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/jost_italic"
        android:text="11th March 2022"
        app:layout_constraintBottom_toTopOf="@+id/tvLandId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPaidAmount" />

    <View
        android:id="@+id/viewUnderLine"
        android:layout_width="0dp"
        android:layout_height="0.75dp"
        android:background="@color/app_color"
        app:layout_constraintEnd_toEndOf="@+id/tvSeeReceipt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvSeeReceipt"
        app:layout_constraintTop_toBottomOf="@+id/tvSeeReceipt" />

    <TextView
        android:id="@+id/tvPaymentMilestone"
        style="@style/text_style_text_color_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_regular"
        android:text="Payment Milestone 2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvProjectName"
        app:layout_constraintStart_toEndOf="@id/tvProjectName"
        app:layout_constraintTop_toTopOf="@+id/tvProjectName" />

    <TextView
        android:id="@+id/tvPaidAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/jost_semibold"
        android:text="â‚¹20,000"
        android:textColor="#676ac0"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@id/tvPaymentDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/category_bottom_ash_line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLandId" />

</androidx.constraintlayout.widget.ConstraintLayout>