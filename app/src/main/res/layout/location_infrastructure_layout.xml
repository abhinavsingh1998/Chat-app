<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_location_infrastructure_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_13"
        android:layout_marginTop="@dimen/margin_size_28"
        android:fontFamily="@font/jost_regular"
        android:text="Location Infrastructure"
        android:textColor="@color/text_light_black_color"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toStartOf="@id/tv_location_infrastructure_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_location_infrastructure_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_all"
        android:textColor="@color/text_blue_color"
        android:textSize="@dimen/text_size_11"
        app:layout_constraintBottom_toBottomOf="@id/tv_location_infrastructure_title"
        app:layout_constraintEnd_toStartOf="@+id/iv_location_infrastructure_arrow"
        app:layout_constraintTop_toTopOf="@id/tv_location_infrastructure_title" />

    <ImageView
        android:id="@+id/iv_location_infrastructure_arrow"
        android:layout_width="@dimen/margin_size_14"
        android:layout_height="@dimen/margin_size_7"
        android:layout_marginEnd="@dimen/margin_size_15"
        android:src="@drawable/ic_arrow_forward_black"
        app:layout_constraintBottom_toBottomOf="@id/tv_location_infrastructure_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_location_infrastructure_all" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_location_infrastructure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_13"
        android:layout_marginTop="@dimen/margin_size_14"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_location_infrastructure_title"
        tools:itemCount="5"
        tools:listitem="@layout/item_location_infrastructure" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_location_infrastructure_see_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_15"
        android:fontFamily="@font/jost_medium"
        android:text="See on map"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_location_infrastructure" />

    <ImageView
        android:id="@+id/iv_location_infrastructure_see_map_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_size_3"
        android:src="@drawable/location_image_red"
        app:layout_constraintBottom_toBottomOf="@id/tv_location_infrastructure_see_map"
        app:layout_constraintEnd_toStartOf="@id/tv_location_infrastructure_see_map"
        app:layout_constraintTop_toTopOf="@id/tv_location_infrastructure_see_map" />

</androidx.constraintlayout.widget.ConstraintLayout>