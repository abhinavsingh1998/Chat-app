<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_blue_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/homescreen_curve"
        android:paddingBottom="@dimen/margin_size_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_project_image_card"
            android:layout_width="@dimen/margin_size_50"
            android:layout_height="@dimen/margin_size_50"
            android:layout_marginStart="@dimen/margin_size_12"
            android:layout_marginTop="@dimen/margin_size_30"
            app:cardCornerRadius="@dimen/margin_size_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_project_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/new_investment_page_image" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_project_name"
            style="@style/text_style_text_black_color_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_size_8"
            android:fontFamily="@font/jost_semibold"
            android:text="Isle of Bliss"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toTopOf="@id/tv_project_location"
            app:layout_constraintEnd_toStartOf="@id/btn_apply_now"
            app:layout_constraintStart_toEndOf="@id/cv_project_image_card"
            app:layout_constraintTop_toTopOf="@id/cv_project_image_card" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_project_location"
            style="@style/text_style_text_black_color_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_size_8"
            android:fontFamily="@font/jost_regular"
            android:text="Anjarle , Maharastra"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toBottomOf="@id/cv_project_image_card"
            app:layout_constraintEnd_toStartOf="@id/btn_apply_now"
            app:layout_constraintStart_toStartOf="@id/tv_project_name"
            app:layout_constraintTop_toBottomOf="@id/tv_project_name" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_apply_now"
            style="@style/text_style_white_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_size_12"
            android:background="@drawable/homescreen_curve"
            android:backgroundTint="@color/black"
            android:drawableEnd="@drawable/arrow_right_"
            android:drawablePadding="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/margin_size_12"
            android:text="@string/apply_now"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_project_name"
            app:layout_constraintTop_toTopOf="@id/tv_project_name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_investment_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_size_14"
            android:layout_marginHorizontal="@dimen/margin_size_12"
            android:layout_marginTop="@dimen/margin_size_13"
            android:background="@drawable/project_detail_price_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_project_image_card">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_investment_details"
                style="@style/text_style_dark_brown_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_17"
                android:layout_marginTop="@dimen/margin_size_8"
                android:fontFamily="@font/jost_regular"
                android:text="Investment Details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_view_booking_journey"
                style="@style/text_style_text_black_color_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_size_16"
                android:drawableEnd="@drawable/rightarrow"
                android:drawablePadding="@dimen/_4sdp"
                android:fontFamily="@font/jost_medium"
                android:text="@string/view_booking_journey"
                app:layout_constraintBottom_toBottomOf="@id/tv_investment_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_investment_details" />

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1"
                android:background="@color/light_brown_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_investment_details"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_size_6"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_paid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_regular"
                style="@style/text_style_medium_gold_color_14"
                android:text="@string/paid"
                app:layout_constraintStart_toStartOf="@id/tv_investment_details"
                app:layout_constraintTop_toBottomOf="@id/view_line"
                app:layout_constraintEnd_toStartOf="@id/tv_pending"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_paid_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹2.0Lakhs"
                style="@style/text_style_thick_brown_color_14"
                android:fontFamily="@font/jost_bold"
                app:layout_constraintStart_toStartOf="@id/tv_paid"
                app:layout_constraintTop_toBottomOf="@id/tv_paid"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_pending"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_regular"
                style="@style/text_style_medium_gold_color_14"
                android:text="@string/pending"
                android:layout_marginStart="@dimen/margin_size_4"
                app:layout_constraintStart_toEndOf="@id/tv_paid"
                app:layout_constraintTop_toTopOf="@id/tv_paid"
                app:layout_constraintEnd_toStartOf="@id/tv_area"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_pending_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1.0Lakhs"
                style="@style/text_style_thick_brown_color_14"
                android:fontFamily="@font/jost_bold"
                app:layout_constraintStart_toStartOf="@id/tv_pending"
                app:layout_constraintTop_toBottomOf="@id/tv_pending"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_regular"
                style="@style/text_style_medium_gold_color_14"
                android:text="@string/area"
                android:layout_marginStart="@dimen/margin_size_4"
                app:layout_constraintStart_toEndOf="@id/tv_pending"
                app:layout_constraintTop_toTopOf="@id/tv_paid"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_area_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000sqft"
                style="@style/text_style_thick_brown_color_14"
                android:fontFamily="@font/jost_bold"
                app:layout_constraintStart_toStartOf="@id/tv_area"
                app:layout_constraintTop_toBottomOf="@id/tv_area"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_allocation_date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_regular"
                style="@style/text_style_medium_gold_color_14"
                android:text="@string/allocation_date"
                app:layout_constraintStart_toStartOf="@id/tv_paid"
                app:layout_constraintTop_toBottomOf="@id/tv_paid_amount"
                android:layout_marginTop="14dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_allocation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 Nov 2021"
                style="@style/text_style_thick_brown_color_14"
                android:fontFamily="@font/jost_bold"
                app:layout_constraintStart_toStartOf="@id/tv_allocation_date_text"
                app:layout_constraintTop_toBottomOf="@id/tv_allocation_date_text"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_possession_date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_regular"
                style="@style/text_style_medium_gold_color_14"
                android:text="@string/possession_date"
                app:layout_constraintStart_toStartOf="@id/tv_pending"
                app:layout_constraintTop_toTopOf="@id/tv_allocation_date_text"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_possession_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 Dec 2022"
                style="@style/text_style_thick_brown_color_14"
                android:fontFamily="@font/jost_bold"
                app:layout_constraintStart_toStartOf="@id/tv_possession_date_text"
                app:layout_constraintTop_toBottomOf="@id/tv_possession_date_text"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_more"
                android:fontFamily="@font/jost_medium"
                style="@style/text_style_view_more_brown_color_14"
                app:layout_constraintStart_toStartOf="@id/tv_area"
                app:layout_constraintTop_toTopOf="@id/tv_allocation_date_text"
                app:layout_constraintBottom_toBottomOf="@id/tv_allocation_date"/>

            <ImageView
                android:id="@+id/iv_view_more_drop_down"
                android:layout_width="@dimen/margin_size_18"
                android:layout_height="@dimen/margin_size_18"
                android:src="@drawable/ic_drop_down"
                android:layout_marginStart="@dimen/margin_size_1"
                app:layout_constraintStart_toEndOf="@id/tv_view_more"
                app:layout_constraintTop_toTopOf="@id/tv_view_more"
                app:layout_constraintBottom_toBottomOf="@id/tv_view_more"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_project_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10"
            android:lineSpacingMultiplier="1.3"
            style="@style/text_style_text_black_color_14"
            android:fontFamily="@font/jost_light"
            android:text="The Isle of Bliss is phase 2 of Codename Bliss Dapoli, a seaside lifestyle plotting development from The House of Abhinandan Lodha…READ MORE"
            android:layout_marginHorizontal="@dimen/margin_size_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_investment_details"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_see_project_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginStart="@dimen/margin_size_12"
            android:paddingVertical="@dimen/margin_size_10"
            android:background="@drawable/white_button_bg"
            android:fontFamily="@font/jost_medium"
            style="@style/text_style_text_color_14"
            android:text="@string/see_project_details"
            app:layout_constraintEnd_toStartOf="@id/tv_view_timeline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_project_info"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_view_timeline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_12"
            android:paddingVertical="@dimen/margin_size_10"
            android:background="@drawable/white_button_bg"
            android:fontFamily="@font/jost_medium"
            style="@style/text_style_text_color_14"
            android:text="@string/view_timeline"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_size_12"
            app:layout_constraintStart_toEndOf="@id/tv_see_project_details"
            app:layout_constraintTop_toTopOf="@id/tv_see_project_details"
            app:layout_constraintBottom_toBottomOf="@id/tv_see_project_details"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_registration_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jost_light"
            style="@style/text_style_reg_black_color_14"
            android:text="@string/reg_draft_text"
            android:lineSpacingMultiplier="1.3"
            android:textAlignment="center"
            android:drawableEnd="@drawable/ic_info"
            android:drawablePadding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/margin_size_14"
            android:layout_marginHorizontal="@dimen/margin_size_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_see_project_details"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>