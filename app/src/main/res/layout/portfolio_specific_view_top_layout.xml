<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_blue_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/all_corner_radius_top_bg"
        android:paddingBottom="@dimen/margin_size_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_project_image_card"
            android:layout_width="@dimen/margin_size_50"
            android:layout_height="@dimen/margin_size_50"
            android:layout_marginStart="@dimen/margin_size_12"
            android:layout_marginTop="@dimen/margin_size_30"
            app:cardCornerRadius="@dimen/margin_size_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_project_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/new_investment_page_image" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_project_name"
            style="@style/text_style_text_black_color_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_size_8"
            android:fontFamily="@font/jost_semibold"
            android:text="Isle of Bliss"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toTopOf="@id/tv_project_location"
            app:layout_constraintEnd_toStartOf="@id/btn_apply_now"
            app:layout_constraintStart_toEndOf="@id/cv_project_image_card"
            app:layout_constraintTop_toTopOf="@id/cv_project_image_card" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_project_location"
            style="@style/text_style_text_black_color_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_size_8"
            android:fontFamily="@font/jost_regular"
            android:text="Anjarle , Maharastra"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toBottomOf="@id/cv_project_image_card"
            app:layout_constraintEnd_toStartOf="@id/btn_apply_now"
            app:layout_constraintStart_toStartOf="@id/tv_project_name"
            app:layout_constraintTop_toBottomOf="@id/tv_project_name" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_apply_now"
            style="@style/text_style_white_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_size_12"
            android:background="@drawable/all_corner_radius_black_bg"
            android:backgroundTint="@color/black"
            android:drawableEnd="@drawable/arrow_right_"
            android:drawablePadding="@dimen/_4sdp"
            android:fontFamily="@font/jost_medium"
            android:paddingHorizontal="@dimen/margin_size_18"
            android:text="Apply Again"
            android:textAllCaps="false"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_project_name"
            app:layout_constraintTop_toTopOf="@id/tv_project_name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_investment_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_size_12"
            android:layout_marginTop="@dimen/margin_size_13"
            android:background="@drawable/project_detail_price_bg"
            android:paddingBottom="@dimen/margin_size_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_project_image_card">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_investment_details"
                style="@style/text_style_dark_brown_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_17"
                android:layout_marginTop="@dimen/margin_size_10"
                android:fontFamily="@font/jost_regular"
                android:text="Investment Details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_view_booking_journey"
                style="@style/text_style_text_black_color_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_size_16"
                android:background="?android:selectableItemBackground"
                android:drawableEnd="@drawable/rightarrow"
                android:drawablePadding="@dimen/margin_size_2"
                android:fontFamily="@font/jost_medium"
                android:padding="@dimen/margin_size_4"
                android:text="@string/view_booking_journey"
                app:layout_constraintBottom_toBottomOf="@id/tv_investment_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_investment_details" />

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1"
                android:layout_marginTop="@dimen/margin_size_10"
                android:background="@color/light_brown_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_investment_details" />

            <LinearLayout
                android:id="@+id/paid_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/margin_size_12"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toStartOf="@id/pending_linear"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="@id/tv_investment_details"
                app:layout_constraintTop_toBottomOf="@id/view_line">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_paid"
                        style="@style/text_style_medium_gold_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_info_outlined"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/jost_regular"
                        android:text="@string/paid"
                        app:drawableTint="@color/gold_color" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_paid_amount"
                        style="@style/text_style_thick_brown_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_4"
                        android:fontFamily="@font/jost_bold"
                        android:text="â‚¹2.0Lakhs" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pending_linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_4"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    app:layout_constraintEnd_toStartOf="@id/area_linear"
                    app:layout_constraintStart_toEndOf="@id/paid_linear"
                    app:layout_constraintTop_toTopOf="@id/paid_linear">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_pending"
                        style="@style/text_style_medium_gold_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_info_outlined"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/jost_regular"
                        android:text="@string/pending" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_pending_amount"
                        style="@style/text_style_thick_brown_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_4"
                        android:fontFamily="@font/jost_bold"
                        android:text="â‚¹1.0Lakhs" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_4"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_area"
                        style="@style/text_style_medium_gold_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_regular"
                        android:text="@string/area" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_area_unit"
                        style="@style/text_style_thick_brown_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_4"
                        android:gravity="end"
                        android:fontFamily="@font/jost_bold"
                        android:text="5000sqft" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_12"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="@id/paid_linear"
                app:layout_constraintStart_toStartOf="@id/tv_investment_details"
                app:layout_constraintTop_toBottomOf="@id/paid_linear">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_allocation_date_text"
                        style="@style/text_style_medium_gold_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_regular"
                        android:text="@string/allocation_date" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_allocation_date"
                        style="@style/text_style_thick_brown_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_4"
                        android:fontFamily="@font/jost_bold"
                        android:text="11 Nov 2021" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_size_4"

                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_possession_date_text"
                        style="@style/text_style_medium_gold_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_regular"
                        android:text="@string/possession_date" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_possession_date"
                        style="@style/text_style_thick_brown_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_4"
                        android:fontFamily="@font/jost_bold"
                        android:text="18 Dec 2022" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/margin_size_4"
                    >


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_view_more"
                        style="@style/text_style_view_more_brown_color_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/jost_medium"
                        android:text="@string/view_more"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_view_more_drop_down"
                        android:layout_width="@dimen/margin_size_18"
                        android:layout_height="@dimen/margin_size_18"
                        android:src="@drawable/ic_drop_down"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/tv_view_more"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_view_more" />

                </LinearLayout>

            </LinearLayout>



            <TextView
                android:id="@+id/textView12"
                style="@style/text_style_gold_color_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/jost_medium"
                android:text="* Rounded"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_layout" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_more_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_size_9"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/margin_size_2"
                android:backgroundTint="@color/portfolio_light_brown_color"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/margin_size_6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/margin_size_20">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_land_id"
                        style="@style/text_style_dark_black_color_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_size_25"
                        android:layout_marginTop="@dimen/margin_size_22"
                        android:layout_marginEnd="@dimen/margin_size_10"
                        android:fontFamily="@font/jost_medium"
                        android:text="Hoabl/Dap/A404"
                        app:layout_constraintEnd_toStartOf="@id/tv_sku_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_land_id_title"
                        style="@style/text_style_dark_black_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_4"
                        android:fontFamily="@font/jost_light"
                        android:text="@string/land_id"
                        app:layout_constraintStart_toStartOf="@id/tv_land_id"
                        app:layout_constraintTop_toBottomOf="@id/tv_land_id" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_sku_type"
                        style="@style/text_style_dark_black_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_4"
                        android:fontFamily="@font/jost_medium"
                        android:text="Marina"
                        app:layout_constraintBottom_toTopOf="@id/tv_sku_type_title"
                        app:layout_constraintStart_toStartOf="@id/tv_sku_type_title"
                        app:layout_constraintTop_toTopOf="@id/tv_land_id" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_sku_type_title"
                        style="@style/text_style_dark_black_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_light"
                        android:text="@string/sku_type"
                        app:layout_constraintBottom_toBottomOf="@id/tv_land_id_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_land_id_title"
                        app:layout_constraintTop_toTopOf="@id/tv_land_id_title" />

                    <View
                        android:id="@+id/top_dashed_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="@dimen/margin_size_26"
                        android:layout_marginTop="@dimen/margin_size_12"
                        android:layout_marginEnd="@dimen/margin_size_16"
                        android:background="@drawable/dashed_line_brown"
                        android:layerType="software"
                        app:layout_constraintTop_toBottomOf="@id/tv_land_id_title" />

                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_12"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:weightSum="3.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/top_dashed_line"
                        app:layout_constraintTop_toBottomOf="@id/top_dashed_line">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_investment_amount"
                                style="@style/text_style_dark_black_color_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/jost_medium"
                                android:text="â‚¹20Lakhs" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tv_investment_amount_title"
                                    style="@style/text_style_dark_black_color_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/jost_light"
                                    android:text="@string/investment_amount"/>

                                <ImageView
                                    android:id="@+id/iv_invested_amount"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="3dp"
                                    android:src="@drawable/ic_info_outlined"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_amount_paid"
                                style="@style/text_style_dark_black_color_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_size_10"
                                android:layout_marginBottom="@dimen/margin_size_4"
                                android:layout_weight="1"
                                android:fontFamily="@font/jost_medium"
                                android:text="â‚¹1Lakhs" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_amount_paid_title"
                                style="@style/text_style_dark_black_color_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_size_10"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/jost_light"
                                android:text="Paid" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_amount_pending"
                                style="@style/text_style_dark_black_color_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_size_4"
                                android:fontFamily="@font/jost_medium"
                                android:text="â‚¹1.5Lakhs"
                                app:layout_constraintBottom_toTopOf="@id/tv_amount_pending_title"
                                app:layout_constraintStart_toStartOf="@id/tv_amount_pending_title"
                                app:layout_constraintTop_toTopOf="@id/tv_investment_amount" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_amount_pending_title"
                                style="@style/text_style_dark_black_color_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/jost_light"
                                android:text="@string/amount_pending"
                                app:layout_constraintBottom_toBottomOf="@id/tv_investment_amount_title"
                                app:layout_constraintEnd_toEndOf="@id/top_dashed_line"
                                app:layout_constraintStart_toEndOf="@id/tv_amount_paid_title"
                                app:layout_constraintTop_toTopOf="@id/tv_investment_amount_title" />
                        </LinearLayout>

                    </LinearLayout>


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.6" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_registry_amount"
                        style="@style/text_style_dark_black_color_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_12"
                        android:layout_marginEnd="@dimen/margin_size_10"
                        android:fontFamily="@font/jost_medium"
                        android:text="â‚¹2.0Lakhs"
                        app:layout_constraintEnd_toEndOf="@id/guideline"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="@+id/ll"
                        app:layout_constraintTop_toBottomOf="@id/ll" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_registry_amount_title"
                        style="@style/text_style_dark_black_color_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_4"
                        android:fontFamily="@font/jost_light"
                        android:text="@string/registry_amount"
                        app:layout_constraintStart_toStartOf="@id/tv_registry_amount"
                        app:layout_constraintTop_toBottomOf="@id/tv_registry_amount" />

                    <ImageView
                        android:id="@+id/iv_amount_pending"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/ic_info_outlined"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_registry_amount_title"
                        app:layout_constraintStart_toEndOf="@+id/tv_registry_amount_title"
                        app:layout_constraintTop_toTopOf="@+id/tv_registry_amount_title" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_other_expenses"
                        style="@style/text_style_dark_black_color_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="@dimen/margin_size_4"
                        android:fontFamily="@font/jost_medium"
                        android:text="â‚¹50k"
                        app:layout_constraintBottom_toTopOf="@id/tv_other_expenses_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="@id/guideline"
                        app:layout_constraintTop_toTopOf="@id/tv_registry_amount" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_other_expenses_title"
                        style="@style/text_style_dark_black_color_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
