<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.login.IssueSubmittedConfirmationFragment">

   <ImageView
       android:id="@+id/confirm_sign"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/confirmation_sign"
       android:layout_marginTop="@dimen/margin_size_28"
       android:layout_marginHorizontal="@dimen/margin_size_120"
       android:layout_marginBottom="@dimen/margin_size_116"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/confirm_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/text_style_text_color_16"
        android:layout_marginHorizontal="@dimen/margin_size_28"
        android:layout_marginTop="@dimen/margin_size_28"
        android:layout_marginBottom="@dimen/margin_size_50"
        android:text="@string/confirmation_msg"
        android:fontFamily="@font/jost_medium"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_sign" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/text_style_light_grey_12"
        android:fontFamily="@font/jost_regular"
        android:text="We will contact you back shortly."
        android:layout_marginHorizontal="@dimen/margin_size_50"
        android:layout_marginTop="@dimen/margin_size_8"
        android:layout_marginBottom="@dimen/margin_size_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_msg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/tc_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>