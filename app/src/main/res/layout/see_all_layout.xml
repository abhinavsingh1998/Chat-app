<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_size_4">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/investment_see_all_bg"
        app:cardCornerRadius="@dimen/margin_size_6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_see_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/investment_see_all_bg">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_vp_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_medium"
                android:text="@string/see_all_small_caps"
                android:textColor="@color/text_blue_color"
                android:textSize="@dimen/margin_size_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.42000002" />

            <ImageView
                android:id="@+id/iv_vp_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_8"
                android:src="@drawable/ic_black_long_rightarrow"
                app:layout_constraintEnd_toEndOf="@id/tv_vp_see_all"
                app:layout_constraintStart_toStartOf="@id/tv_vp_see_all"
                app:layout_constraintTop_toBottomOf="@id/tv_vp_see_all" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>