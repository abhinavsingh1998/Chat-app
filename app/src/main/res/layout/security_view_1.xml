<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvmobile"
        style="@style/text_light_black_color_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/jost_medium"
        android:text="@string/mobile_pin_authentication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_tick_image"
        android:layout_width="@dimen/margin_size_14"
        android:layout_height="@dimen/margin_size_13"
        android:layout_marginStart="@dimen/margin_size_18"
        android:src="@drawable/check_mark"
        app:layout_constraintBottom_toBottomOf="@id/tvmobile"
        app:layout_constraintStart_toEndOf="@id/tvmobile"
        app:layout_constraintTop_toTopOf="@id/tvmobile" />

    <TextView
        android:id="@+id/tv_loc"
        style="@style/text_style_lightgrey14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_regular"
        android:text="@string/control_location_access_here"
        app:layout_constraintStart_toStartOf="@+id/tvmobile"
        app:layout_constraintTop_toBottomOf="@+id/tvmobile" />

    <TextView
        android:id="@+id/auth"
        style="@style/text_style_light_grey_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/jost_semibold"
        android:text="RE-AUTHENTICATE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/color_ash_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_loc" />

</androidx.constraintlayout.widget.ConstraintLayout>