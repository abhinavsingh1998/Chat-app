<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_gravity="center_horizontal"
    app:cardElevation="@dimen/_2sdp"
    android:layout_margin="@dimen/margin_size_4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/margin_size_180"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_size_6">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_70"
            app:cardCornerRadius="@dimen/margin_size_4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mountain"
                    android:scaleType="centerInside"/>

                <ImageView
                    android:layout_width="@dimen/margin_size_26"
                    android:layout_height="@dimen/margin_size_26"
                    android:background="@drawable/ic_play_video"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/margin_size_14"
                    android:layout_marginTop="@dimen/margin_size_17"
                    android:layout_marginBottom="@dimen/margin_size_17"
                    android:layout_gravity="center|start"/>

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <com.emproto.core.textviews.CustomTextView
            android:id="@+id/tv_videotitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_video"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/text_style_text_color_12"
            app:fontName="@string/jost_regular"
            android:layout_marginTop="@dimen/margin_size_9"
            android:layout_marginLeft="@dimen/margin_size_6"
            android:text="Video Title"/>

        <com.emproto.core.textviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_videotitle"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/text_style_text_color_12"
            android:singleLine="false"
            android:gravity="start|center"
            app:fontName="@string/jost_light"
            android:layout_margin="@dimen/margin_size_6"
            android:text="Learn 5 important tips to hit the \nbest investment Goals "/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>