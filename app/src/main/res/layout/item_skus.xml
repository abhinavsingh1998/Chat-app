<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_size_8">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_key_pillar_card"
        android:layout_width="@dimen/margin_size_125"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_4"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/margin_size_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_project_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_16"
                android:layout_marginHorizontal="@dimen/margin_size_10"
                android:text="Marina"
                android:textAlignment="center"
                android:fontFamily="@font/jost_medium"
                style="@style/text_style_text_black_color_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_starting_at"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_6"
                android:layout_marginHorizontal="@dimen/margin_size_10"
                android:text="Starting at 20L"
                android:textColor="@color/text_light_ash_color"
                android:fontFamily="@font/jost_regular"
                android:textSize="@dimen/text_size_14"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_project_name"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_area_skus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000-2000 sqft"
                android:fontFamily="@font/jost_regular"
                android:textSize="@dimen/text_size_12"
                android:textAlignment="center"
                android:textColor="@color/text_lightgrey_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_starting_at"
                android:layout_marginVertical="@dimen/margin_size_12"
                android:layout_marginHorizontal="@dimen/margin_size_20"
                />

            <View
                android:id="@+id/bottom_line"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_view_color"
                android:layout_marginTop="@dimen/margin_size_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_area_skus" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_size_13"
                android:fontFamily="@font/jost_medium"
                android:text="@string/apply_now"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bottom_line" />

            <ImageView
                android:id="@+id/iv_details_arrow"
                android:layout_width="@dimen/margin_size_12"
                android:layout_height="7dp"
                android:layout_marginStart="@dimen/margin_size_4"
                android:src="@drawable/ic_arrow_forward_black"
                app:layout_constraintBottom_toBottomOf="@id/tv_apply"
                app:layout_constraintStart_toEndOf="@id/tv_apply"
                app:layout_constraintTop_toTopOf="@id/tv_apply" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>