<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_dont_miss"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_size_20"
    android:layout_marginTop="@dimen/margin_size_30"
    android:background="@drawable/inv_dont_miss_background"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/cv_top">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_dont_miss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_30"
        android:layout_marginTop="@dimen/margin_size_25"
        android:fontFamily="@font/jost_regular"
        android:text="Donâ€™t Miss Out"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_dont_miss_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_2"
        android:layout_marginEnd="@dimen/margin_size_12"
        android:fontFamily="@font/jost_regular"
        android:text="Your Exclusive Oppurtunity to buy land in a breathing beach side estate"
        android:textColor="@color/text_ash_light_color"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toStartOf="@id/iv_dont_miss_static_image"
        app:layout_constraintStart_toStartOf="@id/tv_dont_miss"
        app:layout_constraintTop_toBottomOf="@id/tv_dont_miss" />

    <ImageView
        android:id="@+id/iv_dont_miss_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_7"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/margin_size_28"
        android:src="@drawable/ic_baseline_arrow_right"
        app:layout_constraintStart_toStartOf="@id/tv_dont_miss"
        app:layout_constraintTop_toBottomOf="@id/tv_dont_miss_info"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_dont_miss_static_image"
        android:layout_width="101dp"
        android:layout_height="93dp"
        android:layout_marginRight="@dimen/margin_size_30"
        android:layout_marginBottom="@dimen/margin_size_25"
        android:src="@drawable/investment_dont_miss_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_dont_miss" />

</androidx.constraintlayout.widget.ConstraintLayout>