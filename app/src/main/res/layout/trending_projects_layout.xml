<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_blue_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_trending_projects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_size_50"
        android:background="@drawable/bottom_corner_radius_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_trending_projects_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_size_13"
            android:layout_marginTop="@dimen/margin_size_10"
            android:fontFamily="@font/jost_regular"
            android:text="Trending Projects"
            android:textColor="@color/text_light_black_color"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_trending_projects_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_size_13"
            android:layout_marginTop="@dimen/margin_size_6"
            android:fontFamily="@font/jost_regular"
            android:text="Handpicked projects recommended just for you!"
            android:textColor="@color/text_lightgrey_color"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintStart_toStartOf="@id/tv_trending_projects_title"
            app:layout_constraintTop_toBottomOf="@id/tv_trending_projects_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_trending_projects_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_all"
            android:textColor="@color/text_blue_color"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_trending_projects_title"
            app:layout_constraintEnd_toStartOf="@+id/iv_video_drone_arrow_tp"
            app:layout_constraintTop_toTopOf="@id/tv_trending_projects_title" />

        <ImageView
            android:id="@+id/iv_video_drone_arrow_tp"
            android:layout_width="@dimen/margin_size_14"
            android:layout_height="@dimen/margin_size_7"
            android:layout_marginEnd="@dimen/margin_size_15"
            android:src="@drawable/ic_arrow_forward_blue"
            app:layout_constraintBottom_toBottomOf="@id/tv_trending_projects_see_all"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_trending_projects_see_all" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_trending_projects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_size_13"
            android:layout_marginTop="@dimen/margin_size_6"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_trending_projects_subtitle"
            tools:itemCount="5"
            tools:listitem="@layout/item_smart_deals" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>