<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/stats_full_overview"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="@dimen/margin_size_12"
        android:layout_marginStart="@dimen/margin_size_12"
        android:layout_marginTop="@dimen/margin_size_14"
        android:layout_marginEnd="@dimen/margin_size_12"
        android:background="@drawable/stats_overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/stats_rupee_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_14"
        android:layout_marginStart="@dimen/margin_size_10"
        android:fontFamily="@font/jost_medium"
        style="@style/text_style_text_color_16"
        android:text="â‚¹4,86,00,000 Cr"
        app:layout_constraintEnd_toEndOf="@+id/stats_full_overview"
        app:layout_constraintStart_toStartOf="@+id/stats_full_overview"
        app:layout_constraintTop_toTopOf="@+id/stats_full_overview" />

    <TextView
        android:id="@+id/trnsacted_tv"
        style="@style/text_style_view_more_brown_color_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_10"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="77dp"
        android:fontFamily="@font/jostregular"
        android:text="@string/land_transacted"
        app:layout_constraintEnd_toEndOf="@+id/stats_full_overview"
        app:layout_constraintStart_toStartOf="@+id/divider_line_about_us"
        app:layout_constraintTop_toBottomOf="@+id/stats_rupee_tv" />

    <View
        android:id="@+id/divider_line_about_us"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#e1d7a5"
        android:layout_marginStart="@dimen/margin_size_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/stats_full_overview"
        app:layout_constraintTop_toBottomOf="@+id/trnsacted_tv" />

    <TextView
        android:id="@+id/desc_stats"
        style="@style/text_style_text_color_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_12"
        android:layout_marginBottom="@dimen/margin_size_10"
        android:fontFamily="@font/jost_light"
android:padding="@dimen/margin_size_5"
        android:text="@string/stats_desc"
        app:layout_constraintBottom_toBottomOf="@+id/stats_full_overview"
        app:layout_constraintEnd_toEndOf="@+id/stats_full_overview"
        app:layout_constraintStart_toStartOf="@+id/stats_full_overview"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_about_us"
        app:layout_constraintVertical_bias="0.09" />


</androidx.constraintlayout.widget.ConstraintLayout>