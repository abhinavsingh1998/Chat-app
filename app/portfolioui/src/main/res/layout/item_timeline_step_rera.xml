<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_size_16"
    android:layout_marginTop="@dimen/margin_size_8"
    android:layout_marginBottom="@dimen/margin_size_2"
    android:outlineSpotShadowColor="#ababab"
    app:cardElevation="@dimen/margin_size_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/header_indicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_progress_complete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_header"
            style="@style/text_medium_black_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:lines="1"
            android:text="Project Registration"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="@+id/header_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/header_indicator"
            app:layout_constraintTop_toTopOf="@+id/header_indicator" />

        <ImageView
            android:id="@+id/step_view"
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_steps_four"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_header" />

        <ImageView
            android:id="@+id/steps_type"
            android:layout_width="@dimen/margin_size_10"
            android:layout_height="@dimen/margin_size_10"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_progress_complete"
            app:layout_constraintEnd_toEndOf="@+id/step_view"
            app:layout_constraintStart_toStartOf="@+id/step_view"
            app:layout_constraintTop_toBottomOf="@+id/step_view" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_regular_normal_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RERA Registration"
            android:textColor="#17171c"
            app:layout_constraintBottom_toBottomOf="@+id/steps_type"
            app:layout_constraintStart_toStartOf="@+id/text_header"
            app:layout_constraintTop_toTopOf="@+id/steps_type" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_info_outlined"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintStart_toEndOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/tv_name" />

        <TextView
            android:id="@+id/textView7"
            style="@style/text_regular_app_color_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_name" />

        <TextView
            android:id="@+id/textView10"
            style="@style/text_regular_pcolor5_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="12dp"
            android:text="MAHARERA Registration No. Phase I - P52800031035\nMAHARERA Registration No. Phase II- P52800031036"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>